{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],

    "module": "ESNext",
    "moduleResolution": "Node",

    "strict": true,

    "declaration": true,
    "declarationMap": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
